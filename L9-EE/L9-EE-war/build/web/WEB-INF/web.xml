<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersDeleteServlet</servlet-name>
        <servlet-class>servlets.UsersDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersAddServlet</servlet-name>
        <servlet-class>servlets.UsersAddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTransactionServlet</servlet-name>
        <servlet-class>servlets.AddTransactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteTransactionServlet</servlet-name>
        <servlet-class>servlets.DeleteTransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersDeleteServlet</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersAddServlet</servlet-name>
        <url-pattern>/users/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTransactionServlet</servlet-name>
        <url-pattern>/transaction/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTransactionServlet</servlet-name>
        <url-pattern>/transaction/delete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
